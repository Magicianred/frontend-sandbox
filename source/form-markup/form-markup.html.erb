<% content_for :head do %>
  <link rel="stylesheet" href="../stylesheets/form-markup/forms.css"/>
<% end %>

<div class="live-example">
  <h1>Questionnaire</h1>

  <p>Required fields are followed by *</p>

  <form class="form">

    <h2>About you</h2>
    <fieldset>

      <div class="form__item">
        <label for="first-name" class="form__label-heading">First name</label>
        <input id="first-name" type="text"/>
      </div>

      <div class="form__item">
        <label for="email" class="form__label-heading">Email address *
          <span class="visually-hidden">required</span>
        </label>
        <input id="email" type="email" required="required" aria-required="true"/>
      </div>

      <div class="form__item">
        <label for="password" class="form__label-heading">Password *
          <span class="visually-hidden">required</span>
        </label>
        <input id="password" type="password" required="required"
               aria-required="true" aria-describedby="first-name-hint"/>

        <p class="form__hint" id="first-name-hint">At least 8 characters</p>
      </div>

      <div class="form__item">
        <label for="savings" class="form__label-heading">How much do you save a
          month?</label>
        <input id="savings" placeholder="Â£" />
      </div>

      <div class="form__item">
        <label for="saving-proportion" class="form__label-heading">What
          proportion of your income do
          you save?</label>
        <input id="saving-proportion" placeholder="%" />
      </div>

      <div class="form__item">
        <fieldset>
          <legend>
            <span>Gender</span>
          </legend>
          <p class="form__inline-group">
            <label for="male">
              <input id="male" type="radio" name="gender">
              Male
            </label>
            <label for="female">
              <input id="female" type="radio" name="gender">
              Female
            </label>
          </p>
        </fieldset>
      </div>

      <div class="form__item">
        <fieldset>
          <legend>
            <span>Do you own any of the following?</span>
          </legend>
          <p>
            <label for="house">
              <input id="house" type="checkbox" name="own">
              House
            </label>
          </p>

          <p>
            <label for="car">
              <input id="car" type="checkbox" name="own">
              Car
            </label>
          </p>

          <p>
            <label for="motorbike">
              <input id="motorbike" type="checkbox" name="own">
              Motorbike
            </label>
          </p>
        </fieldset>
      </div>

      <div class="form__item">
        <label for="county" class="form__label-heading">County</label>
        <select id="county">
          <option value="1">Aberdeen City</option>
          <option value="2" selected>Berkshire</option>
          <!-- Other options go here -->
        </select>
      </div>

      <div class="form__item">
        <fieldset>
          <legend aria-describedby="dob-hint">
            <span>Date of birth</span>
          </legend>

          <div class="form__inline-group">
            <p>
              <label for="day" class="visually-hidden">Day</label>
              <select id="day">
                <option value="Day">Day</option>
                <!-- Other options go here -->
              </select>
            </p>
            <p>
              <label for="month" class="visually-hidden">Month</label>
              <select id="month">
                <option value="Month">Month</option>
                <!-- Other options go here -->
              </select>
            </p>
            <p>
              <label for="year" class="visually-hidden">Year</label>
              <select id="year">
                <option value="Year">Year</option>
                <!-- Other options go here -->
              </select>
            </p>
          </div>

          <p id="dob-hint" class="form__extra-info">So we can provide you with
            age-related advice</p>

        </fieldset>
      </div>

      <div class="form__item">
        <label for="textarea" class="form__label-heading">Please leave a
          comment</label>
        <textarea id="textarea"></textarea>
      </div>

      <p>
        <input id="newsletter" type="checkbox" name="newsletter" value="1">
        <label for="newsletter">I wish to subscribe to the free
          newsletter</label>
      </p>

      <p>
        <label for="terms"><input id="terms" type="checkbox" name="terms" value="1"> I agree to the
          <a href="/terms-and-conditions">terms and conditions</a> * <span class="visually-hidden">required</span>
        </label>
      </p>

      <p>We will never share your personal data with any third party.<br/>
        You information is private and confidential
        <a href="/privacy">Our private policy</a>.
      </p>

      <a href="/resume">No I'll enter these details later</a>

      <input class="button" type="submit" value="Save">
    </fieldset>

  </form>
</div>
